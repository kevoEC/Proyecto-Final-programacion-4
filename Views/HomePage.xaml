<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinalProgramacion4.Views.HomePage"
             xmlns:viewmodels="clr-namespace:ProyectoFinalProgramacion4.ViewModels"
             xmlns:local="clr-namespace:ProyectoFinalProgramacion4.ViewModels"
             Title="ADMIN TECH UDLA">
    <ScrollView>
        <VerticalStackLayout Spacing="10" Margin="10" BindingContext="{Binding IsBusy}">
            <Image Source="imagen_principal.png"
                   SemanticProperties.Description="The dot net bot waving hello!"
                   HeightRequest="260" />
            <BoxView Color="White" HeightRequest="10"/>
            <BoxView Color="White" HeightRequest="10"/>
            <BoxView Color="White" HeightRequest="10"/>
            <Button Text="Descarga nuestros posts de ventas"
                    Padding="4" CornerRadius="10" WidthRequest="300" HeightRequest="60"
                    Clicked="llamarAPI"/>
            <BoxView Color="White" HeightRequest="10"/>
            <BoxView Color="White" HeightRequest="10"/>
            <BoxView Color="White" HeightRequest="10"/>
            <Image Source="crea_rapidamente.png"
                   SemanticProperties.Description="The dot net bot waving hello!"
                   HeightRequest="250" />

        </VerticalStackLayout>
    </ScrollView>


</ContentPage>